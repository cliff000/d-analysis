            </div>
        </div>
        <br>
    </div>

    <div id="box2">
        <%= form.label :区間2 %>
        <%= form.text_field :mydeck, {class: 'form-control'} %>
        <br>

        <div class="row">
            <div class="col-5">
                <%= form.label :開始時刻 %>
                <%= form.date_field :dp, {class: 'form-control'} %>
                <%= form.time_field :dp, {class: 'form-control'} %>
            </div>
            <div class="col-2">
            </div>
            <div class="col-5">
                <%= form.label :終了時刻 %>
